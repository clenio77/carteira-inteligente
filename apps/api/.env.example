# ===========================================
# Carteira Inteligente API - Environment Variables
# ===========================================

# Application
APP_NAME="Carteira Inteligente API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Database (PostgreSQL or SQLite for dev)
# For development (SQLite):
DATABASE_URL=sqlite:///./carteira_dev.db
# For production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/carteira

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CEI B3 (for future real integration)
CEI_BASE_URL=https://cei.b3.com.br

# ===========================================
# BRAPI.dev - Market Data API
# ===========================================
# Get your FREE token at: https://brapi.dev/dashboard
# 
# Without token: Only 4 stocks available (PETR4, VALE3, ITUB4, MGLU3)
# Free tier: 15,000 requests/month, 4000+ stocks
#
# Leave empty for demo/development with limited stocks
BRAPI_TOKEN=2gNEmX1P2a9aBYfQKucfPY

# Scheduler
ENABLE_SCHEDULER=true
SYNC_INTERVAL_HOURS=24

# Google Gemini API Key
GOOGLE_API_KEY=
